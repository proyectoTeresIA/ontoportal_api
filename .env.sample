# OntoPortal API Environment Configuration
# Copy this file to .env and adjust the values for your environment

# Basic Configuration
API_URL=http://localhost:9393
ONTOLOGIES_LINKED_DATA_PATH=
GOO_PATH=
SPARQL_CLIENT_PATH=
ONTOPORTAL_KB=ontoportal_kb

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Database Configuration (4store/SPARQL endpoint)
GOO_BACKEND_NAME=4store
GOO_HOST=localhost
GOO_PORT=9000
GOO_PATH_QUERY=/sparql/
GOO_PATH_DATA=/data/
GOO_PATH_UPDATE=/update/

# Redis Hosts (can be different for different purposes)
GOO_REDIS_HOST=localhost
REDIS_GOO_CACHE_HOST=localhost
REDIS_HTTP_CACHE_HOST=localhost
REDIS_PERSISTENT_HOST=localhost
ANNOTATOR_REDIS_HOST=localhost
ANNOTATOR_REDIS_PORT=6379

# Search Services (Solr)
SOLR_TERM_SEARCH_URL=http://localhost:8983/solr/term_search_core1
SOLR_PROP_SEARCH_URL=http://localhost:8983/solr/prop_search_core1

# MGREP Service (for annotation)
MGREP_HOST=localhost
MGREP_PORT=55555
MGREP_DICTIONARY_FILE=./test/data/dictionary.txt

# API Configuration
REST_URL_PREFIX=http://localhost:9393

# File Paths
REPOSITORY_FOLDER=./test/data/ontology_files/repo
REPORT_PATH=./test/ontologies_report.json

# Application Settings
RACK_ENV=development
OVERRIDE_CONFIG=false
COVERAGE=false
ENABLE_HTTP_CACHE=false
ENABLE_SECURITY=false
ENABLE_MONITORING=false
ENABLE_THROTTLING=false
LOG_LEVEL=DEBUG
