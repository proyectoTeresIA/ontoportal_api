# Production Environment Configuration
# Copy this to .env.production and customize as needed

# Basic Settings
COMPOSE_PROFILES=production
RACK_ENV=production

# API Configuration
REST_URL_PREFIX=http://localhost:9394/
API_PORT=9394

# Database Configuration
GOO_BACKEND_NAME=4store
GOO_HOST=4store-production
GOO_PORT=9000

# Redis Configuration
REDIS_HOST=redis-production
REDIS_PORT=6379

# Security & Performance
ENABLE_HTTP_CACHE=true
ENABLE_SECURITY=true
ENABLE_THROTTLING=true
ENABLE_MONITORING=false

# Logging
LOG_LEVEL=INFO
SLOW_REQUEST_LOG_ENABLED=true

# Data Paths (inside container)
REPOSITORY_FOLDER=/srv/ontoportal/data/repository
MGREP_DICTIONARY_FILE=/srv/ontoportal/data/mgrep/dictionary/dictionary.txt
REPORT_PATH=/srv/ontoportal/data/ontologies_report.json

# External URLs (update these for your actual production domain)
# REST_URL_PREFIX=https://your-domain.com/api/
# UI_HOST=your-domain.com

# SSL/TLS (when using reverse proxy)
# FORCE_SSL=true
# SSL_VERIFY_PEER=true
